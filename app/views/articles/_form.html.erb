<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"})  do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :title %> 
        </div>
        <div class="col-sm-6">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :description %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <%= f.submit class: 'btn-primary btn-lg' %>
        </div>
      </div>
      <% end %>
      <div align="center" class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
      </div>
</div>
